    <div class="welcome-header-container">
        <div class="welcome-header mr-5">Welcome To</div>
    </div>
    <div class="row">
        <div class="col-12 col-lg-6 position-relative">
            <div class="company-name">
                {{{companyName}}}
            </div>
            <div class="company-description">
                {{{companyDescription}}}
            </div>
        </div>

        <div class="col-12 col-lg-6 m-auto d-flex">
            <div class="hero-image-container mx-auto">
                <img class="hero-image" src="/images/banner-wheel.png">
