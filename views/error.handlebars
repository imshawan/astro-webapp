
<div style="color: #fff; padding-top: 8rem; padding-bottom: 8rem;" class="container mb-5 mx-auto">
    <div class="row my-auto">
        <h1 class="text-center mx-auto col-12 error-heading">{{{message}}}</h1>
        <div class="mb-2 col-12 text-center">
            <h2>
                {{#if error.status}}
                    {{{error.status}}}
                {{else}}
                    {{{status}}}
                {{/if}}
            </h2>
        </div>
        <div class="col-12">
            {{#if stack}}
                <div style="font-size: 16px;" class="text-center mx-auto">{{{stack}}}</div>
            {{/if}}
            <p>{{{error.stack}}}</p>
        </div>
    </div>
</div>
