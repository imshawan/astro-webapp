<div class="section-body mt-5">
    <div class="d-flex flex-wrap px-5 mt-auto pt-5 justify-content-center container-lg zodiac-horoscope-area">

        <div class="px-5 mt-auto pt-5 justify-content-center zodiac-horoscope-container">
            <div class="zodiac-horoscope-padding-container">
                <div class="zodiac-horoscope-area-bg">
                    <div class="zodiac-horoscope-container-head-image justify-content-center d-flex">
                        {{{signImage}}}
                    </div>
                    <div class="text-black section-heading text-center font-weight-bold {{{marginClass}}}">
                        {{{signName}}}
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-10">
                            <div class="mt-3 mb-4 zodiac-horoscope-container-body">
                                <p>
                                    {{{prediction}}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-11 mx-auto justify-content-center other-horoscopes">
        <div class="section-heading text-center pt-5">Other horoscope for you</div>

        <div class="{{{otherHoroscopeClass}}} row justify-content-center mt-5 d-flex flex-wrap px-5 mt-auto pt-5">

        </div>
    </div>
</div>